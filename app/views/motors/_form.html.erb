<%= form_with(model: motor) do |form| %>
  <% if motor.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(motor.errors.count, "error") %> prohibido guardar este motor:</h2>

      <ul>
        <% motor.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :tipo, style: "bloqueo de pantalla" %>
    <%= form.text_field :tipo %>
  </div>

  <div>
    <%= form.label :name, style: "bloqueo de pantalla" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "bloqueo de pantalla" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :photo, style: "bloqueo de pantalla" %>
    <%= form.text_field :photo %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
